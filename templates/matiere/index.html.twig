{% extends 'base.html.twig' %}

{% block title %}
	{{ 'matiere.table.matieres'|trans }}
{% endblock %}

{% block body %}
	<h1>{{ 'matiere.titre.liste'|trans }}</h1>
	{% if matieres is not empty %}
		<table class="table">
			<thead>
				<tr>
					<th>{{ 'matiere.table.matieres'|trans }}</th>
					<th>{{ 'matiere.table.coeff'|trans }}</th>
				</tr>
			</thead>
			<tbody>
				{% for m in matieres %}
					<tr>
						<td>{{m.nom}}</td>
						<td>{{m.coefficient}}</td>
						<td>
							<a href="{{path('matiere_detail', {'id':m.id})}}" class="btn btn-primary">{{ 'matiere.action.voir'|trans }}</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	{% else %}
		<p>{{ 'matiere.erreur.abs'|trans }}</p>
	{% endif %}

	<h2>{{ 'formulaire.titre.ajoutM'|trans }}</h2>
	{{ form(ajout)}}{% endblock %}
